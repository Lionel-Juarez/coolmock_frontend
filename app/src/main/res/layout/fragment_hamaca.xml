<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundColor"
    tools:context=".entidades.hamacas.HamacaFragment">

    <!-- Spinner para seleccionar planos -->
    <Spinner
        android:id="@+id/spinner_planos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:entries="@array/planos_array" />

    <!-- RecyclerView para mostrar las hamacas -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/hamacasRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="48dp"
        android:padding="4dp" />

    <ImageView
        android:id="@+id/openDatePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_calendar_month_24"
        android:clickable="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="16dp"/>


</FrameLayout>
