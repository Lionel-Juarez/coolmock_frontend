<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="@color/lightBackgroundColor"

    tools:context=".entidades.reservas.ReservaFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        app:cardCornerRadius="16dp"
        app:cardElevation="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp"
            android:background="@drawable/ic_add_white">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/create_new_reservation"
                android:textAlignment="center"
                android:textSize="24sp"
                android:textStyle="bold"
                android:padding="10dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/fecha_reserva"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:textSize="16sp" />

            <!-- Implementing a simple calendar view -->
            <CalendarView
                android:id="@+id/calendarView"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_marginTop="10dp"
                android:dateTextAppearance="@style/CalendarDateStyle" />

            <CheckBox
                android:id="@+id/cb_reserva_pagada"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pagada"
                android:layout_marginTop="10dp" />
            <Spinner
                android:id="@+id/sp_metodo_pago"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/metodo_pago"
                android:entries="@array/payment_array"
                android:layout_marginTop="10dp" />

            <Spinner
                android:id="@+id/sp_cliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/sp_clientes"
                android:layout_marginTop="10dp" />


            <Spinner
                android:id="@+id/sp_estado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:prompt="@string/estado_reserva"
                android:entries="@array/estado_reserva_array"
                android:layout_marginTop="10dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="20dp">

                <Button
                    android:id="@+id/btn_save_reserva"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginRight="15dp"
                    android:onClick="addReserva"
                    android:text="@string/save"
                    app:cornerRadius="10dp" />


                <Button
                    android:id="@+id/btn_cancel_reserva"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:onClick="cancel"
                    android:text="@string/cancel"
                    app:cornerRadius="10dp" />

            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</ScrollView>
