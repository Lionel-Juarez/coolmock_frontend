<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".entidades.reportes.ReportsFragment">

    <!-- Imagen de fondo -->
    <ImageView
        android:id="@+id/headerImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="@color/white"/>

    <!-- Contenedor para el contenido encima de la imagen -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@android:color/transparent">

        <!-- Cuadro de título con transparencia -->
        <RelativeLayout
            android:id="@+id/overlayContainer"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/rounded_bottom_corners"
            android:padding="16dp"
            android:elevation="4dp">

            <!-- Título principal -->
            <TextView
                android:id="@+id/tvTitleReservas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/reportes"
                android:textColor="@color/black"
                android:textSize="28sp"
                android:textStyle="bold"
                android:layout_alignParentStart="true" />

            <!-- Subtítulo -->
            <TextView
                android:id="@+id/tvSubTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvTitleReservas"
                android:layout_alignParentStart="true"
                android:text="@string/historial"
                android:textColor="@color/black"
                android:textStyle="bold"
                android:textSize="24sp"
                android:layout_marginTop="8dp" />

            <ImageView
                android:id="@+id/openDatePicker"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:src="@drawable/btnnueva"
                android:clickable="true"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="16dp"/>
        </RelativeLayout>

        <!-- Texto de lista vacía -->
        <TextView
            android:id="@+id/emptyView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/no_reports"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:gravity="center"
            android:layout_gravity="center"
            android:visibility="gone"/>

        <!-- RecyclerView para mostrar la lista -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/reportsRecyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="vertical"
            android:paddingTop="10dp"
            android:paddingBottom="100dp"
            android:clipToPadding="false" />
    </LinearLayout>
</RelativeLayout>
