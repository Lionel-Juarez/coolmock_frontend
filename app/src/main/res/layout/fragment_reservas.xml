<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/principalColor"
    android:id="@+id/fragment_reservas"
    tools:context=".entidades.reservas.ReservaFragment">

    <TextView
        android:id="@+id/tvNoReservas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_reservas"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_marginTop="16dp"
        android:textColor="#616161"
        android:padding="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="15dp"
        android:background="@drawable/transparent_background"
        android:text="@string/reservas"
        android:layout_marginTop="30dp"
        android:layout_gravity="center_horizontal"
        android:textSize="30sp"
        android:textColor="@color/white"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"/>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_add_reserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="76dp"
        android:text="@string/fab_add_reserva"
        android:textAllCaps="true"
        android:textColor="@color/white"
        android:onClick="addReserva"
        app:backgroundTint="@color/black"
        app:cornerRadius="20dp"
        app:elevation="6dp"
        app:iconGravity="textStart"
        android:padding="16dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservasRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignBottom="@+id/fab_add_reserva"
        android:layout_marginStart="8dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="8dp"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:paddingBottom="96dp"
        android:scrollbars="vertical" />


</RelativeLayout>
