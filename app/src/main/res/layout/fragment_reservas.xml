<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightBackgroundColor"
    android:id="@+id/fragment_reservas"
    tools:context=".entidades.reservas.ReservaFragment">


    <!-- Título de la pantalla -->
    <TextView
        android:id="@+id/tvTitleReservas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reservas"
        android:gravity="center"
        android:textSize="24sp"
        android:textColor="@color/black"
        android:layout_marginTop="16dp"
        android:background="@drawable/transparent_background"
        android:paddingVertical="10dp" />

    <!-- Botón para filtrar -->
    <ImageButton
        android:id="@+id/btnFilter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/filtrar"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="16dp"
        android:layout_marginTop="16dp"
        android:background="?attr/selectableItemBackgroundBorderless" />

    <!-- Texto cuando no hay reservas -->
    <TextView
        android:id="@+id/tvNoReservas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/no_reservas"
        android:gravity="center"
        android:visibility="gone"
        android:textSize="18sp"
        android:layout_below="@id/tvTitleReservas"
        android:textColor="#616161"
        android:padding="16dp" />

    <!-- Botón para añadir reserva -->

    <!-- Lista de reservas -->

    <com.google.android.material.button.MaterialButton
        android:id="@+id/fab_add_reserva"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginHorizontal="16dp"
        android:layout_marginBottom="88dp"
        android:onClick="addReserva"
        android:padding="16dp"
        android:text="@string/fab_add_reserva"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:backgroundTint="@color/accentColor"
        app:cornerRadius="28dp"
        app:elevation="6dp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/reservasRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvTitleReservas"
        android:layout_above="@id/fab_add_reserva"
        android:layout_marginHorizontal="8dp"
        android:clipToPadding="false"
        android:paddingTop="10dp"
        android:scrollbars="vertical" />

</RelativeLayout>
