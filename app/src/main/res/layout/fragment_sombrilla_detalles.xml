<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:layout_centerInParent="true"
        app:cardCornerRadius="10dp"
        app:cardElevation="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvDetalleNumeroSombrilla"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/numero_sombrilla"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                app:drawableLeftCompat="@drawable/sombrilla24" />

            <TextView
                android:id="@+id/tvDetallePrecio"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/sunbed_price"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                app:drawableLeftCompat="@drawable/etiqueta_precio24" />

            <TextView
                android:id="@+id/tvDetalleEstado"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="@string/estado_actual"
                android:drawablePadding="10dp"
                android:gravity="center_vertical"
                android:textColor="@color/black"
                app:drawableLeftCompat="@drawable/etiqueta" />

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"
                android:layout_marginTop="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingTop="10dp"
                android:gravity="center_vertical">

                <Button
                    android:id="@+id/btnReservar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/fecha24"
                    android:text="@string/btn_reservar"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    tools:ignore="RtlHardcoded" />


                <Button
                    android:id="@+id/btnOcupar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/hamaca54"
                    android:text="@string/btn_ocupar"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/btnLiberar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/candado_abierto24"
                    android:text="@string/btn_liberar"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    tools:ignore="RtlHardcoded" />

                <Button
                    android:id="@+id/btnVerReserva"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/lupa24"
                    android:text="@string/btn_verReserva"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    app:cornerRadius="5dp"
                    tools:ignore="RtlHardcoded" />
            </LinearLayout>

            <com.google.android.material.divider.MaterialDivider
                android:layout_width="match_parent"
                android:layout_height="3dp"
                app:dividerInsetStart="16dp"
                app:dividerInsetEnd="16dp"
                android:layout_marginTop="20dp"
                        android:layout_marginBottom="20dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:gravity="center_horizontal">

                <TextView
                    android:id="@+id/tvCantidadHamacas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:text="@string/selected_sunbeds"
                    android:gravity="center_horizontal"
                    android:textColor="@color/black"/>

                <RadioGroup
                    android:id="@+id/radioGroupHamacas"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <RadioButton
                        android:id="@+id/radioOne"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_1"
                        android:background="@drawable/selector_button_background"
                        android:button="@android:color/transparent"
                        android:gravity="center"
                        android:layout_marginEnd="20dp" />

                    <RadioButton
                        android:id="@+id/radioTwo"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="@string/_2"
                        android:background="@drawable/selector_button_background"
                        android:button="@android:color/transparent"
                        android:gravity="center" />
                </RadioGroup>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</RelativeLayout>
