<!-- circle.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Capa de fondo con borde negro -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#000000"/> <!-- Color del borde negro -->
        </shape>
    </item>

    <!-- Capa de borde de color principal -->
    <item android:left="4dp" android:right="4dp" android:top="4dp" android:bottom="4dp">
        <shape android:shape="rectangle">
            <solid android:color="#72B0DD"/> <!-- Color del borde principal -->
        </shape>
    </item>

    <!-- Capa de la imagen de fondo blanca -->
    <item android:left="8dp" android:right="8dp" android:top="8dp" android:bottom="8dp">
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF"/> <!-- Color de la imagen de fondo blanca -->
        </shape>
    </item>
</layer-list>
