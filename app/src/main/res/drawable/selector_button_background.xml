<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E0E0E0" /> <!-- Color when pressed -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="#FFC107" /> <!-- Color when selected -->
            <corners android:radius="4dp" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#FFFFFF" /> <!-- Default color -->
            <stroke android:width="1dp" android:color="#BDBDBD" /> <!-- Border color -->
            <corners android:radius="4dp" />
        </shape>
    </item>
</selector>
