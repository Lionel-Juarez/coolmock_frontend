<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RoundedButton" parent="">
        <item name="cornerSize">20dp</item>
    </style>
    <!-- Estilo personalizado para las fechas en el CalendarView -->
    <style name="CalendarDateStyle" parent="@android:style/TextAppearance.DeviceDefault.Small">
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="SaveButtonStyle">
        <item name="android:background">#4CAF50</item> <!-- Verde -->
        <item name="android:textColor">#FFFFFF</item> <!-- Blanco -->
        <item name="android:padding">10dp</item>
        <item name="android:drawablePadding">10dp</item>
    </style>

    <!-- Estilo personalizado para los botones -->
    <style name="CustomButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">@color/principalColor</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="CancelButtonStyle" parent="Widget.MaterialComponents.Button">
        <item name="android:backgroundTint">#BC4646</item>
        <item name="android:textColor">@color/black</item>
    </style>
</resources>
