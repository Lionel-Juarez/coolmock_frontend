<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:enableOnBackInvokedCallback="true"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:networkSecurityConfig="@xml/network_security_config"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.SombrillaV1"
        android:usesCleartextTraffic="true"
        tools:targetApi="tiramisu">
        <activity
            android:name=".initialmenus.SplashScreenActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".initialmenus.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".initialmenus.SignUpActivity"
            android:exported="true" />
        <activity
            android:name=".MainActivity"
            android:exported="false" />
        <activity
            android:name=".entidades.sombrillas.SombrillaFragment"
            android:exported="false" />
        <activity
            android:name=".entidades.reportes.NuevoReporte"
            android:exported="false" />
        <activity
            android:name=".entidades.usuarios.NuevoUsuario"
            android:exported="false" />
        <activity
            android:name=".entidades.clientes.NuevoCliente"
            android:exported="false" />
        <activity
            android:name=".entidades.reservas.NuevaReserva"
            android:exported="false" />
        <activity
            android:name=".entidades.gestionCuentas.CuentasFragment"
            android:exported="false" />
    </application>
</manifest>
